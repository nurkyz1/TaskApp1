<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="kg.geektech.taskapp35.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="kg.geektech.taskapp35.ui.room.RoomFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_room" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="kg.geektech.taskapp35.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="kg.geektech.taskapp35.NewsFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="kg.geektech.taskapp35.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/boardFragment"
        android:name="kg.geektech.taskapp35.ui.board.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="kg.geektech.taskapp35.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/newsNewFragment"
        android:name="kg.geektech.taskapp35.ui.NewsNewFragment"
        android:label="fragment_news_new"
        tools:layout="@layout/fragment_news_new" />
</navigation>